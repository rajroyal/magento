<?php
class Royal_Testimonials_Block_Adminhtml_Categories extends Mage_Adminhtml_Block_Widget_Grid_Container
{
    public function __construct()
    {
     //where is the controller
     $this->_controller = 'adminhtml_categories';
     $this->_blockGroup = 'testimonials';
     //text in the admin header
     $this->_headerText = 'Testimonial Categories';
     //value of the add button
     $this->_addButtonLabel = 'Add a Category';
     parent::__construct();
     }
}
